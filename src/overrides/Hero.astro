---
// This is the original Hero.astro override - kept for backward compatibility
// For new projects, use the HeroX component instead for better control
import { Image } from 'astro:assets'
import LinkButton from '../components/LinkButton.astro'

import ContainerSection from '../components/ContainerSection.astro'
import { PAGE_TITLE_ID } from '../constants'

const { data } = Astro.locals.starlightRoute.entry
const { title = data.title, tagline, image, actions = [] } = data.hero || {}

const imageAttrs = {
  loading: 'eager' as const,
  decoding: 'async' as const,
  width: 400,
  height: 400,
  alt: image?.alt || '',
}

let darkImage: ImageMetadata | undefined
let lightImage: ImageMetadata | undefined
let rawHtml: string | undefined

if (image) {
  if ('file' in image) {
    darkImage = image.file
  } else if ('dark' in image) {
    darkImage = image.dark
    lightImage = image.light
  } else {
    rawHtml = image.html
  }
}
---

<ContainerSection>
  <div class="hero">
    {darkImage && <Image src={darkImage} {...imageAttrs} class:list={{ 'light:sl-hidden': Boolean(lightImage) }} />}
    {lightImage && <Image src={lightImage} {...imageAttrs} class="dark:sl-hidden" />}
    {rawHtml && <div class="hero-html sl-flex" set:html={rawHtml} />}
    <h1 class="title" id={PAGE_TITLE_ID} data-page-title set:html={title} />
    {tagline && <div class="tagline" set:html={tagline} />}
    {
      actions.length > 0 && (
        <div class="actions">
          {actions.map(({ attrs: { class: className, ...attrs } = {}, icon, link: href, text, variant }) => (
            <LinkButton {href} {variant} class:list={[className]} {...attrs}>
              {text}
              {icon?.html && <Fragment set:html={icon.html} />}
            </LinkButton>
          ))}
        </div>
      )
    }
  </div>
</ContainerSection>

<style>
  .hero {
    padding-top: 2rem;
    padding-bottom: 2rem;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    gap: 0.25rem;
  }

  @media (min-width: 1024px) {
    .hero {
      padding-top: 3rem;
      padding-bottom: 3rem;
    }
  }

  @media (min-width: 768px) {
    .hero {
      padding-top: 2.5rem;
      padding-bottom: 2.5rem;
    }
  }

  .title {
    color: var(--foreground-light);
    letter-spacing: -0.05em;
    font-weight: 700;
    font-size: 1.875rem;
    line-height: 2.25rem;
  }

  @media (min-width: 1024px) {
    .title {
      line-height: 1.1;
    }
  }

  @media (min-width: 768px) {
    .title {
      font-size: 2.25rem;
      line-height: 2.5rem;
    }
  }

  .tagline {
    color: var(--muted-foreground);
    font-weight: 300;
    font-size: 1.125rem;
    line-height: 1.75rem;
    max-width: 42rem;
  }

  .actions {
    width: 100%;
    padding-top: 0.5rem;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 0.5rem;
  }
</style>
